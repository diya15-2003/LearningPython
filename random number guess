import random

user = int(input("Enter a number between 1 and 10: "))
computer = random.randint(1,10)

def compare():
  if(user==computer):
    print("you guessed the value.You won!!!")


while(user!=computer):
  if(user==computer):
    print("you guessed the value.You won!!!")

  else:
    print("Please try again")
    if(user<computer):
      print("Guess higher")
      user = int(input("Enter a number between 1 and 10: "))
      compare()
    else:
      print("Guess lower")
      user = int(input("Enter a number between 1 and 10: "))
      compare()
